generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Chat {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  messages  Json      @map("messages")

  @@map("chats")
} 